<div class="container-fluid" style="min-height: 600px">
  <div class="container" style="min-height: 600px">
    <nav>
      <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">All(<%=@requests_count %>)</a>
        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Pending Requests(<%=@requests_pending_count %>)</a>
        <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Founded Shipper(<%=@requests_found_count %>)</a>
      </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <h1 align="center"> Request list</h1>
        <% if @requests.empty? %>
            <p align="center">This shop hasn't have any requests yet!!!</p>
        <% else %>
            <div class="container">
              <div class="row">
                <table class="table table-striped table-bordered">
                  <thead class="thead-dark">
                  <tr>
                    <th><%= sortable "address", "Destination Address" %></th>
                    <th><%= sortable "status" %></th>
                    <th><%= sortable "created_at" %></th>
                    <th><%= sortable "updated_at" %></th>
                  </tr>
                  </thead>

                  <tbody>
                  <%- @requests.each do |r| -%>
                      <tr>
                        <td><%= r.address %></td>
                        <td><%= r.status %></td>
                        <td><%= r.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                        <td><%= r.updated_at.strftime("%d/%m/%Y %H:%M") %></td>

                        <td colspan="2">
                          <%= button_to "Edit", edit_user_shop_request_path(current_user.id, r.shop_id, id: r.id), class: "btn btn-outline-dark", method: "get", type: "button", form: {style: 'display:inline-block;'}%>
                          <%= button_to "Delete", requests_destroy_path(user_id: current_user.id, shop_id: r.shop_id, id: r.id), class: "btn btn-outline-danger", type: "button", method: :delete, data: { confirm: "Are you sure?"}, form: {style: 'display:inline-block;'} %>
                        </td>
                      </tr>
                  <%- end -%>
                  </tbody>
                </table>
                <div>
                  <%= paginate @requests, param_name: "requests", params: {active_tab: 'all'} %>
                </div>
              </div>
        <% end %>

        </div>

      </div>
      <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
        <h1 align="center"> Request list</h1>
