<div class="cont">
  <div class="form sign-in">
    <h2>Welcome back,</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <label>
            <span>Email</span>
            <%= f.input :email, label: false, placeholder: "example@abc.xyz", required: true, autofocus: true %>
          </label>
          <label>
            <span>Password</span>
            <%= f.input :password, label: false, required: true %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forget-password' %><br />
            <% end -%>
          </label>
        </div>

        <%= f.button :button, "Sign In", class: "submit", style: "display: block;"  %>
    <% end %>
    <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
            <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'fb-btn', type: 'button' %><br />
        <% end -%>
    <% end -%>
  </div>
  <div class="sub-cont">
    <div class="img">
      <div class="img__text m--up">
        <h2>New here?</h2>
        <p>Sign up and we'll find some shippers near you!</p>
      </div>
      <div class="img__text m--in">
        <h2>One of us?</h2>
        <p>If you already has an account, just sign in. We've missed you!</p>
      </div>
      <div class="img__btn">
        <span class="m--up">Sign Up</span>
        <span class="m--in">Sign In</span>
      </div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html=> { class: 'form sign-up' }) do |f| %>
        <%= f.error_notification %>
        <h2>Time to feel like home,</h2>
        <label>
          <span>Email</span>
          <%= f.input :email, label: false, placeholder: "example@abc.xyz", required: true, autofocus: true %>
        </label>
        <label>
          <span>Password</span>
          <%= f.input :password, label: false, required: true %>
        </label>
        <label>
          <span>Password Confirmation</span>
          <%= f.input :password_confirmation, label: false, required: true %>
        </label>
        <%= f.button :button, "Sign up", class: "submit", style: "display: block;"  %>
    <% end %>
  </div>
</div>

<script>
    document.querySelector('.img__btn').addEventListener('click', function() {
        document.querySelector('.cont').classList.toggle('s--signup');
    });
</script>