<h1> Request lists</h1>
<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Destination Address</th>
    <th>Status</th>
    <th>Create at</th>
    <th>Update at</th>
  </tr>
  </thead>

  <tbody>
  <%- @requests.each do |r| -%>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.destination_address %></td>
        <td><%= r.status %></td>
        <td><%= r.created_at %></td>
        <td><%= r.updated_at %></td>
        <td><%= link_to "Edit", edit_shop_request_path(id: r.id)%></td>
        <td><%= link_to "Delete", shop_request_path(id: r.id), method: :delete, data: { confirm: "Are you sure?"}%></td>
      </tr>
  <%- end -%>
  </tbody>
</table>
<%= link_to "Create new request", new_shop_request_path %>